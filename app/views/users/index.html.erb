<div class="all-users">
  <h1><%= t("views.common.all_users") %></h1>
  <ul class="users">
    <% @users.each do |user| %>
      <li>
      <% if user.name.empty? %>
        <%= link_to user.email, user %>
      <% else %>
        <%= link_to user.name, user %>
      <% end %>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
  <%= link_to t('views.common.back'), books_path %>
</div>
